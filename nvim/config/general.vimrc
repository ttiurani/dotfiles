" allow to highlight code syntax
syntax on
syntax enable

" allow backspacing over everything in insert mode
set backspace=indent,eol,start

" line numbers
set number

" tab is always two spaces
set tabstop=2
set softtabstop=2
set expandtab
set smarttab
set shiftwidth=2
set autoindent
set smartindent

" Always utf8
set termencoding=utf-8
set fileencoding=utf-8

